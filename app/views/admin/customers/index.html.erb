<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8'>
      <h2 class="mt-4">会員一覧</h2>
      
      <table class="table">
        <thead>
          <tr class="bg-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customers| %>
            <tr>
              <td><%= customers.id %></td>
              <td>
                <%= customers.last_name %>
                <%= customers.first_name %>
              </td>
              <td><%= customers.email %></td>
              <td><%= customers.is_deleted %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customer %>
    </div>
  </div>
</div>