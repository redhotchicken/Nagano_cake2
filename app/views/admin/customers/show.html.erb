<h1>
  <strong>
    <%= @customer.last_name %>
    <%= @customer.first_name %>
  </strong>さんの
  <strong>会員詳細</strong>
</h1>
<table class="table">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.customers_id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @customer.last_kana %> </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>  
    <td><%= @customer.tell %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td><%= @customer.is_deleted %></td>
  </tr>
</table>