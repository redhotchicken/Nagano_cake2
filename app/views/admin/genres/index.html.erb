<div class="container pt-5 px-sm-0">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class="mt-5">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <div class ="row">
      <div class="col-md-2 text-center">ジャンル名</div>
        <div class="col-md-3">
          <%= f.text_field :name, autocomplete: "name", class:"form-control", placeholder: 'ジャンル名' %>
        </div>
        <div>
          <%= f.submit '   新規登録   ', class: "btn btn-sm btn-success btn-inline ml-3" %>
        </div>
    </div>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-md-5">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class=""><%= genre.name %></td>
              <td class="text-center"><%= link_to '   編集する  ', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>