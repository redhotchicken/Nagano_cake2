<div class='container px-5 px-sm-0'>
  <h1 class="mt-4">注文履歴一覧</h1>
  <div class='row'>
    
    <div class='col-md-3 mt-4'>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= order.create_at %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.amount %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>