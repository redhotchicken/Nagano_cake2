<div class="container pt-5">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>商品編集</h3>
    </div>
  </div>
    <%= form_with model: @item, url:admin_item_path(@item), local: true do |f| %>
      <div class="row mt-3">
        <div class="col-md-3 d-flex align-items-center flex-row-reverse">商品画像</div>
        <div class="col-md-5 text-left">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 d-flex align-items-center flex-row-reverse">商品名</div>
        <div class="col-md-5 text-center">
          <%= f.text_field :name, autocomplete: "name", class:"form-control", placeholder: '商品名' %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 text-right">商品説明</div>
        <div class="col-md-5 text-center">
          <%= f.text_area :description, :size => "50x10", class: "form-control", placeholder: 'ここに説明文を記述します' %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 d-flex align-items-center flex-row-reverse">ジャンル</div>
        <div class="col-md-5 text-left">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 d-flex align-items-center flex-row-reverse">税抜価格</div>
        <div class="col-md-2 text-left">
          <%= f.text_field :price, autocomplete: "price", class:"form-control", placeholder: '1000' %>
        </div>
        <span class="d-flex align-items-center flex-row-reverse">円</span>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 text-right">販売ステータス</div>
        <div class="col-md-3 text-left">
          <div class="radio-inline">
            <%= f.radio_button :is_active, true %>
            <%= f.label :販売中, class:"sale_label" %>
          </div>
          <div class="radio-inline"> 
            <%= f.radio_button :is_active, false %>
            <%= f.label :販売停止中, class:"sale_label" %>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-6 text-right">
          <%= f.submit ' 変更を保存 ', class: "btn btn-lg btn-success" %>
        </div>
      </div>
    <% end %>
</div>