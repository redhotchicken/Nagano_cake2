<div class="container pt-5">
  <div class="row">
    <div class="md-3">
      <h3>商品一覧</h3>
    </div>
    <div class ="col-md-9 text-right">
      <%= link_to "+", new_admin_item_path, class: "btn btn-outline-dark rounded-circle" %>
    </div>
  </div>
  <div class="row">
    <table class="table mt-5">
        <thead>
          <tr class="table-secondary">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price.to_s(:delimited) %>円
              </td>
              <td>
                <%= item.genre.name %>
              </td>
              <td>
                <% if item.is_active == true %>
                  <span class="text text-success">販売中</span>
                <% else %>
                  <span class="text text-muted">販売停止中</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <div class="mt-3">
    <%= paginate @items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>