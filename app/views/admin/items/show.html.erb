<div class="container pt-5">
  <div class="row">
    <div class="md-3">
      <h3>商品詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_image(250,250) %>
  </div>
  <div class="col-md-9">
    <table class="table">
      <tbody>
        <tr>
          <td><label>商品名</label></td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><label>商品説明</label></td>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <td><label>ジャンル</label></td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            <label>税込価格</label>
            <label>(税抜価格)</label>
          </td>
          <td><%= @item.tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
        </tr>
        <tr>
          <td><label>販売ステータス</label></td>
          <td>
            <% if @item.is_active == true %>
              <span class="text text-success">販売中</span>
            <% else %>
              <span class="text text-muted">販売停止中</span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="mt-3 text-center">
      <%= link_to ' 編集する ', edit_admin_item_path(@item), class: "btn btn-lg btn-success" %>
    </div>
  </div>
  </div>
</div>