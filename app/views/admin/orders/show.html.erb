<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>注文履歴詳細</h2>
      <table class="table">
        <tr>
          <th>購入者</th>
          <td>
            <%= link_to admin_customer_path(@order) do %>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.post_code %>
            <%= @order.address %><br>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name%>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_type %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
          <%= form_with model: @order, url: admin_order_path do |f| %>
            <%= f.select :status, Order.statuses_i18n.invert, {prompt: false} %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
          </td>
        </tr>
      </table>
      <table class=table"">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            th
          </tr>
        </thead>
        <% @order_item.each do |order_item| %>
          <tbody>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.item.with_tax_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.price*order_item.amount %></td>
              <td>
                <%= form_with model: order_item, url: admin_order_item_path(order_item), local: true do |f| %>
                 <%= f.select :make_status, OrderItem.make_statuses_i18n.invert, {prompt: false} %>
                  <%= f.submit "更新", class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>