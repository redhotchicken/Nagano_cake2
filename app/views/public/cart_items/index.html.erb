<div class="container">

  <div class="row">
    <div class="col-md-8">
      <h2><strong>ショッピングカート</strong></h2>
    </div>
    <div class="col">
     <%= link_to "カートを空にする", public_cart_items_destroy_all_path, methld: :delete, class:"btn btn-danger" %>
    </div>
  </div>

   <div class="row-md-3">

    <table border="1">
      <thead>
      <tr bgcolor="whitesmoke">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
         <% @cart_items.each do |cart_item| %>
         <tr>
           <td><%= image_tag cart_item.item.get_image(100,100) %>
           <%= cart_item.item.name %></td>

           <!-- 商品の税込み価格、tax_priceは消費税を求めるメソッド-->
           <td><%= cart_item.item.tax_price %></td>

           <td>
             <%= cart_item.amount %>
             
             <% form_with url:public_cart_item_path(cart_item) do |f| %>
             <%= f.select :amount, *[1..10] %>
             <%= f.submit  "変更", class: "btn btn-success" %>
             <% end %>
           </td>

            <!-- subtotalメソッドは小計を求めるメソッド-->
           <td><%= cart_item.subtotal %></td>

           <td>
             <%= link_to "削除する", public_cart_items_path, method: :delete, class: "btn btn-danger" %>
           </td>
         </tr>
          <% end %>
      </tbody>

    </table>

    </div>

    <div class="row-md-3">

      <div class="col">
        <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
      </div>

      <div class="col">
       <table>
         <% @cart_items.each do |cart_item| %>
          <tr>
            <th bgcolor="whitesmoke">合計金額</th>
            <td><%= @total += cart_item.subtotal %></td>
          </tr>
          <% end %>
        </table>
      </div>


    </div>
  </div>

 <div class="container">
    <div class="text-center">
      <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
    </div>
  </div>



