<div class="container">

  <div class='row'>
    <h3 class="title"><strong>配送先登録/一覧</strong></h3>
  </div>
  <div class='row'>
    <%= form_with model:@delivey, url:public_deliveries_path,method: :post do |f| %>
      <div class="form-group">
         <%= f.label :"郵便番号(ハイフンなし)" %>
         <%= f.text_field :post_code %>
      </div>

      <div class="form-group">
         <%= f.label :"住所" %>
         <%= f.text_area :address %>
      </div>

      <div class="form-group">
         <%= f.label :"宛名" %>
         <%= f.text_field :name %>
         <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class='row'>

    <% @deliveries.each do |derivery| %>
      <table>
        <tr bgcolor="silver">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
        <tr>
          <td><%= derivery.post_code %></td>
          <td><%= derivery.address %></td>
          <td><%= derivery.name %></td>
          <td><%= link_to "編集する", edit_public_derivery(derivery) %>
              <%= link_to "削除する", public_delivery_path, method: :delete %></td>
        </tr>
      </table>
    <% end %>

  </div>

</div>
