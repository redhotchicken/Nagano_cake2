<div class="container">

  <div class='row'>
    <h3 class="title">配送先登録/一覧</h3>
  </div>

  <div class='row'>
    <%= form_with model: @delivery, url:public_deliveries_path, method: :post do |f| %>
      <div class="form-group">
         <%= f.label :post_code,'郵便番号(ハイフンなし)' %>
         <%= f.text_field :post_code %>
      </div>

      <div class="form-group">
         <%= f.label :address, '住所' %>
         <%= f.text_area :address %>
      </div>

      <div class="form-group">
         <%= f.label :name, '宛名'%>
         <%= f.text_field :name %>
           <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class='row-md-3'>

      <table border="1">
        <tr bgcolor="whitesmoke">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th class="col-md-3"></th>
          </tr>
        <% @deliveries.each do |delivery| %>
          <tr>
            <td><%= delivery.post_code %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td class="col-md-3"><%= link_to "編集する", edit_public_delivery_path(delivery), class:"btn btn-success" %>
                <%= link_to "削除する", public_delivery_path(delivery), method: :delete, class:"btn btn-danger" %></td>
          </tr>
          <% end %>
      </table>

  </div>
  
 
</div>
