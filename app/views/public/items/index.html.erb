<table class='table table-hover table-inverse'>
  <thead>
    <tr>
  <h3 class="font-weight-bold">商品一覧</h3>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to public_item_path(item.id) do %>
          <%= image_tag item.get_image(50,50) %>
          <% end %>
        </td>
        <td>
         <p>商品名<%= item.name %></p>
        </td>
        <td>
         <p>¥<%= item.price %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>