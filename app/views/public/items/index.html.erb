<div class="container bg">
  <div class="row center">
    <!-- ジャンル -->
    <div class="col-md-2 mt-5">
      <table class="table table-bordered ml-1">
        <thead>
          <th>ジャンル一覧</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-10 mt-3">
        <h3 class="font-weight-bold">商品一覧(全<%= @items_all.count %>件)</h3>
         <div class="container">
           
       <div class="row wrapper-grid">
          <% @items.each do |item| %>
            <div class="m-3">
             <div class="card"  style="width: 12rem;">
               <div class="img mx-auto mt-2">
                 <%= link_to public_item_path(item.id) do %>
                   <%= image_tag item.get_image(100,150) %>
                  <% end %>
                 <div class="font-weight-bold ml-1">
                   <p><%= item.name %></p>
                 </div>
                 <div class="font-weight-bold ml-1">
                   <p>¥<%= item.price.to_s(:delimited) %></p>
                 </div> 
               </div>  
             </div>   
            </div> 
          <% end %>
        </div>
     </div>
   

      <div class="footer container col-md-6 offset-md-3 py-2">
        <div class="pagination justify-content-center">
        <%= paginate @items %>
        </div>
      </div>
  </div>
</div>