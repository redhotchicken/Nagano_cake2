
<%= image_tag @item.get_image(100,100) %>
<p class="font-weight-bold"><%= @item.name %></p>
<%= @item.description %>
<p>¥<%= @item.price.to_s(:delimited) %>（税込）</p>

<%= form_with model:@cart_item, url:public_cart_items_path, method: :post, local:true do |f| %>
<%= f.hidden_field :get_image, :value => @item.get_image(100,100) %>
<%= f.hidden_field :name, :value => @item.name %>
<%= f.hidden_field :price, :value => @item.price %>
<%= f.select :amount,(1..5).to_a, include_blank:'個数選択' %>
<%= f.submit "カートに入れる", class:"btn btn-success" %>
<% end %>