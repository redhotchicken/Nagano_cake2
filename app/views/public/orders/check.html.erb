<h4>注文情報確認</h4>

 <table class="table">
            <thead>
                <tr>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                </tr>
            </thead>

            <% @total = 0 %>
            <% @cart_items.each do |cart_item| %>

             <tbody>
                <tr>
                    <td><%= image_tag cart_item.item.get_image(100,100) %>
                     <%= cart_item.item.name %></td>
                    <td><%= cart_item.item.price.to_s(:delimited) %></td>
                    <td><%= cart_item.amount %></td>
                    <td>
                        <%= (cart_item.item.price*cart_item.amount).to_s(:delimited) %>
                        <% @total += (cart_item.item.price*cart_item.amount) %>
                    </td>
                </tr>
              </tbody>
             <% end %>
  </table>

  <table class="table">
            <thead>
                <tr>
                    <th>送料</th>
                    <th>商品合計</th>
                    <th>請求金額</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @postage %></td>
                    <td><%= @total.to_s(:delimited) %></td>
                    <td><%= (@postage + @total).to_s(:delimited) %></td>
                </tr>
            </tbody>
  </table>
<%= form_with model: @order, url: public_orders_path,method: :post, local: true do |f| %>

  <p class="font-weight-bold">支払方法</p>
    <%= @order.payment_type_i18n %>
  <p class="font-weight-bold">お届け先</p>
    <%= @order.post_code %>
    <%= @order.address %>
    <br>
    <%= @order.name %>

    <%= f.hidden_field :payment, :value => @total %>
    <%= f.hidden_field :postage, :value => 800 %>
    <%= f.hidden_field :status, :value => 0 %>
    <%= f.hidden_field :post_code, :value => @order.post_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :payment_type, :value => @order.payment_type %>
    <%= f.hidden_field :name, :value => @order.name %>

  <%= f.submit "注文を確定する", class: "btn btn-sm btn-success" %>
<% end %>