<p>注文履歴一覧</p>

 <table class="table">
            <thead>
                <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </tr>
            </thead>
            <tbody>
            <%= @order_item each do |order_item| %>
                <tr>
                    <td></td>
                    <td>
                      <%= order_item.post_code %>
                      <%= order_item.address %>
                      <%= order.item.name %>
                    </td>
                    <td><%= order_item.name %></td>
                    <td><%= order_item.payent </td>
                    <td><%= order_item.status %></td>
                    <td><%= f.submit "表示する", public_order_path, class: "btn btn-primary" %></td>
                </tr>
            <% end %>    
            </tbody>
  </table>