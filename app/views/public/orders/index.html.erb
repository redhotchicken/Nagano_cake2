<div class="container">
 <div class="row">
  <div class="col-md-8">
   <p>注文履歴一覧</p>

       <div class="row-md-10">
        <table border="1">
          <thead>
            <tr bgcolor="whitesmoke">
                  <th>注文日</th>
                  <th>配送先</th>
                  <th>注文商品</th>
                  <th>支払金額</th>
                  <th>ステータス</th>
                  <th>注文詳細</th>
            </tr>
          </thead>
            <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                    <td>
                      <%= order.post_code %>
                      <%= order.address %>
                      <%= order.name %>
                    </td>
                    <td>
                      <% order.order_items.each do |order_item| %>
                        <%= order_item.item.name %>
                      <% end %>
                    </td>
                    <td><%= order.payment.to_s(:delimited) %>円</td>
                    <td><%= order.status %></td>
                    <td><%= link_to "表示する", public_order_path(order), class: "btn btn-primary" %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>
</div>