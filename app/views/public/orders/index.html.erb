<p>注文履歴一覧</p>

 <table class="table">
            <thead>
                <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </tr>
            </thead>
            <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                    <td>
                      <%= order.post_code %>
                      <%= order.address %>
                      <%= order.name %>
                    </td>
                    <td><%= order.name %></td>
                    <td><%= order.payment %></td>
                    <td><%= order.status %></td>
                    <td><%= link_to "表示する", public_order_path(order), method: :delete, class: "btn btn-primary" %>
                    </td>
                </tr>
            <% end %>
            </tbody>
  </table>