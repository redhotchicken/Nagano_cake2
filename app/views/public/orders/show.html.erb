<h4>注文履歴詳細</h4>

<p>注文情報</p>
 <table class="table">
            <thead>
                <tr>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>支払方法</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                    <td>
                      <%= @order.post_code %>
                      <%= @order.address %>
                      <%= @order.name %>
                    </td>
                    <td><%= @order.payment_type_i18n %></td>
                    <td><%= @order.status %></td>
                </tr>
            </tbody>
  </table>
<p>請求情報</p>
 <table class="table">
            <thead>
                <tr>
                    <th>商品合計</th>
                    <th>配送料</th>
                    <th>ご請求額</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @total.to_s(:delimited) %></td>
                    <td><%= @order.postage %></td>
                    <td><%= @order.payment.to_s(:delimited) %></td>
                </tr>
            </tbody>
  </table>
<p>注文内容</p>
 <table class="table">
            <thead>
                <tr>
                    <th>商品</th>
                    <th>単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
            <% @order_items.each do |order_item| %>
                <tr>
                    <td><%= order_item.item.name %></td>
                    <td><%= (order_item.price).to_i.to_s(:delimited) %></td>
                    <td><%= order_item.amount %></td>
                    <td><%= (order_item.price * order_item.amount).to_i.to_s(:delimited) %></td>
                </tr>
            <% end %>
            </tbody>
  </table>