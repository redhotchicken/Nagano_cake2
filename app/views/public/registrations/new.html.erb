<div class="container">
  
  <h4>新規会員登録</h4>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="form-group">
    <span>名前</span>
    <%= f.label :（姓） %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和" %>
     <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"道子" %>
  </div>

  <div class="form-group">
    <span>フリガナ</span>
    <%= f.label :（セイ） %>
    <%= f.text_field :last_kana, autofocus: true, autocomplete: "last_kana", placeholder:"レイワ" %>
    <%= f.label :（メイ）%>
    <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana", placeholder:"ミチコ" %>
  </div>

  <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder:"0000000" %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :tell, autofocus: true, autocomplete: "tell", placeholder:"0000000000" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード（6文字以上） %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>

