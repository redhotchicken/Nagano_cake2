<div class="container"></br>
  
  <h3><span class="px-3" style="background-color:lightgray">新規会員登録</span></h3>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        
          <table class="table table-borderless align-middle">
            <tbody>
              <tr>
               <td>名前</td>
               <td class="text-right">
                 <%= f.label :（姓） %>
               </td>
               <td>
                 <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder:"令和" %>
               </td>
               <td class="text-right">
                 <%= f.label :（名） %>
               </td>
               <td>
                 <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"道子" %>
               </td>
             </tr>
             <tr>
               <td>フリガナ</td>
               <td class="text-right">
                 <%= f.label :（セイ） %>
               </td>
               <td>
                 <%= f.text_field :last_kana, autofocus: true, autocomplete: "last_kana", placeholder:"レイワ" %>
               </td>
               <td class="text-right">
                 <%= f.label :（メイ）%>
               </td>
               <td>
                 <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana", placeholder:"ミチコ" %>
               </td>
             </tr>
             <tr>
               <td><%= f.label :メールアドレス %></td>
               <td></td>
               <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
               </td>
               <td></td>
             </tr>
             <tr>
               <td><%= f.label :郵便番号（ハイフンなし） %></td>
               <td></td>
               <td>
                <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder:"0000000" %>
　          　 </td>
  　          </tr>
           　<tr>
               <td><%= f.label :住所 %></td>
               <td></td>
               <td class= "col-md-5">
                <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"東京都渋谷区代々木神園町0-0", class:"form-control" %>
　             </td>
  　          </tr>
           　<tr>
               <td><%= f.label :電話番号（ハイフンなし） %></td>
               <td></td>
               <td>
                <%= f.text_field :tell, autofocus: true, autocomplete: "tell", placeholder:"0000000000" %>
               </td>
               <td></td>
             </tr>
             <tr>
               <td><%= f.label :パスワード（6文字以上） %></td>
               <td></td>
               <td>
                <% if @minimum_password_length %>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
               </td>
               <td></td>
             </tr>
             <tr>
               <td><%= f.label :パスワード（確認用） %></td>
               <td></td>
               <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
               </td>
               <td></td>
             </tr>
             <tr>
               <td></td>
               <td></td>
               <td>
                <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
              </td>
              <td></td>
             </tr>
           </tbody>
         </table>
          <% end %>
          
          <h3><h3><span class="px-3" style="background-color:lightgray">既に登録済みの方</span></h3>
         <div>
           <%= link_to "こちら", new_customer_session_path %>からログインしてください。
         </div>
         </br>
</div>
          
