<div class="container">
  <div class="row">
   <h5 class="-5">ログイン</h5>
  </div> 

    <p>会員の方はこちらからログイン</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <form>
      <div class="form-group row">
        <%= f.label :メールアドレス, class:"col-2 offset-2 col-form-label" %>
         <div class="col-md-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
         </div>
      </div>
      <div class="form-group row">
        <%= f.label :パスワード, class:"col-2 offset-2 col-form-label" %>
         <div class="col-md-5">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
         </div>
      </div>

      <div class="form-group row">
        <div class="col-2 mt-3 offset-4">
         <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
     </form>
    <% end %>

      <div class="form-group row">
        <div class="col-5">
          <p>会員登録がお済みでない方</p>
          <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
        </div>  
      </div>    

